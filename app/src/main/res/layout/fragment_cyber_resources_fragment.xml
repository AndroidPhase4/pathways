<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".views.Cyber.FragmentCyberResources">


        <TextView
            android:id="@+id/resourceTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cyber Security Resources"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="100dp"/>

        <Button
            android:id="@+id/edXCyberBtn"
            android:layout_width="289dp"
            android:layout_height="62dp"
            android:text="EdX"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.342" />

        <Button
            android:id="@+id/courseraCyberBtn"
            android:layout_width="289dp"
            android:layout_height="62dp"
            android:text="Coursera"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.499" />
        <Button
            android:id="@+id/codecademyCyberBtn"
            android:layout_width="289dp"
            android:layout_height="62dp"
            android:text="Codecademy"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.651" />



    </androidx.constraintlayout.widget.ConstraintLayout>